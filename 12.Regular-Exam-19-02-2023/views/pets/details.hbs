<main>
  <div class="container">
    <div class="col-9">

      <!-- Start Pet Photo Post Section -->
      <div class="card">
        <div class="top">

          <!-- Start User Details and Image Location Section -->
          <div class="userDetails">

            <!-- Link to User Profile Details Page-->
            <div>
              <div class="profilepic">
                <div class="profile_img">
                  <div class="image">
                    <img src="/static/images/person.png" alt="img8" />
                  </div>
                </div>
              </div>
            </div>
            <h3>

              <!-- Link to User Profile Details Page -->
              <p>
                <!-- User's username -->
                {{photo.owner.username}}
              </p>
              <!-- photo's location -->
              <span>{{photo.location}}</span>

              <!-- IF the viewer is the creator of the photo -->
              {{#if photo.isOwner}}
                <div class="edit-delete-btns">

                  <!-- Edit Pet Photo -->
                  <a href="/photos/{{photo._id}}/edit">
                    <img
                      class="edit-img"
                      src="/static/images/edit-pen-icon-6.jpg"
                      alt="edit button"
                    />
                  </a>

                  <!--Delete Pet Photo -->
                  <a href="/photos/{{photo._id}}/delete">
                    <img
                      class="bin-img"
                      src="/static/images/icon-remove-22.jpg"
                      alt="bin button"
                    />
                  </a>
                </div>
              {{/if}}

            </h3>
          </div>

        </div>

        <!-- Start Pet Photo -->
        <div class="imgBx">
          <!-- Pet Photo -->
          <img src="{{photo.imageUrl}}" alt="post" class="cover" />
        </div>

        <div class="bottom">

          <p class="message">
            <b class="petDescription">{{photo.description}}</b>
          </p>

          <!-- Photo description -->
          <div class="pet-details">
            <p class="petName">Name: {{photo.name}}</p>
            <p class="petAge">Age: {{photo.age}}</p>
          </div>

          <!-- Comments Section -->
          <div class="comments">
            {{#if photo.commentList}}
              {{#each photo.commentList}}
                <div class="userDetails">
                  <div class="comment-data">
                    <div class="profilepic">
                      <div class="profile_img">
                        <div class="image">
                          <!-- User Profile Image -->
                          <img src="/static/images/person.png" alt="img8" />
                        </div>
                      </div>
                    </div>

                    <!--User's username and comment-->
                    <p><b>{{this.user.username}}</b>- {{this.comment}}</p>
                  </div>
                </div>
              {{/each}}
            {{else}}
              <div class="no-comments">
                <p>No comments yet.</p>
              </div>
            {{/if}}
          </div>

          <!-- Add Comments Section -->
          {{#if photo.hasUser}}
            {{#if photo.isOwner}}{{else}}
              <div class="addComments">
                <!-- Start Add Comments Form -->
                <form method="post" action="/photos/{{photo._id}}/comments">
                  <textarea
                    id="comment-textarea"
                    name="text"
                    cols="40"
                    rows="10"
                    placeholder="Add comment..."
                  ></textarea>
                  <!-- Post Comments Button -->
                  <button type="submit">Post</button>
                </form>
              </div>
            {{/if}}

          {{/if}}

        </div>

      </div>

    </div>
  </div>
</main>