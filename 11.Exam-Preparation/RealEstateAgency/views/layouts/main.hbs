<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <!-- Do not forget to change the path to the css file -->
    <title>{{title}}</title>
    <link href="/static/css/style.css" type="text/css" rel="stylesheet" />
  </head>

  <body>

    <div id="box">

      <div>
        {{#if errors}}
          <div class="errorContainer">
            {{#each errors}}
              <p>{{this}}</p>
            {{/each}}
          </div>
        {{/if}}
      </div>

      <nav>
        <a href="/">Home</a>
        <ul>
          <!-- Guest users and Logged users -->
          <li><a href="/available">Housing for rent</a></li>
          {{#if username}}
            <!-- Logged users -->
            <li><a href="/housing/create">Create offer</a></li>
            <li><a href="/housing/search">Search</a></li>
            <li><a href="/auth/logout">Logout</a></li>
          {{else}}
            <!-- Guest users -->
            <li><a href="/auth/login">Login</a></li>
            <li><a href="/auth/register">Register</a></li>
          {{/if}}

        </ul>
      </nav>
      {{{body}}}
      <footer>
        Â© 2021
      </footer>
    </div>

  </body>

</html>