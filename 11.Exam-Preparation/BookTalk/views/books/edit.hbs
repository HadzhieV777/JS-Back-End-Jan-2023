<section class="edit-form-container">
  {{#with book}}
    <form method="POST" action="/books/{{_id}}/edit">
      <h3>Edit Book Review</h3>
      <label>Title</label>
      <input
        type="text"
        name="title"
        class="box"
        id="title"
        value="{{title}}"
      />
      <label>Author</label>
      <input
        type="text"
        name="author"
        class="box"
        id="author"
        value="{{author}}"
      />
      <label>Genre</label>
      <input
        type="text"
        name="genre"
        class="box"
        id="genre"
        value="{{genre}}"
      />
      <label>Stars</label>
      <input
        type="number"
        name="stars"
        class="box"
        id="stars"
        value="{{stars}}"
      />
      <label>Image</label>
      <input
        type="text"
        name="imageUrl"
        class="box"
        id="imageUrl"
        value="{{imageUrl}}"
      />
      <label>Review</label>
      <textarea class="box" name="review" value="{{review}}">
        {{review}}</textarea>
      <input type="submit" value="Edit" class="btn" />
    </form>
  {{/with}}
</section>